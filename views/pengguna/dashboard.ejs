<!-- views/pengguna/dashboard.ejs -->
<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/output.css">
</head>

<body class="bg-gray-100">
    <div class="flex min-h-screen">
        <% include ../partials/sidebar %> <!-- Sidebar di kiri -->

        <div class="flex-1 p-6">
            <h1 class="text-3xl font-bold text-gray-800 mb-6">Selamat Datang di Dashboard</h1>

            <% if (upcomingRapat) { %>
                <div class="bg-white p-6 rounded-lg shadow-md mb-6">
                    <h2 class="text-2xl font-semibold text-orange-500 mb-2">Pengumuman Rapat DSI</h2>
                    <p class="text-gray-600">Judul Rapat: <%= upcomingRapat.judul %></p>
                    <p class="text-gray-600">Tanggal Rapat: <%= new Date(upcomingRapat.tanggal).toLocaleDateString('id-ID') %></p>
                </div>
            <% } else { %>
                <p class="text-gray-600">Tidak ada rapat yang akan datang.</p>
            <% } %>
        </div>
    </div>
</body>

</html>
