<!-- views/pengguna/jadwal.ejs -->

<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/output.css">
</head>

<body class="bg-gray-100">
    <div class="flex h-screen overflow-hidden">
        <div class="sticky top-0 h-screen">
            <% include ../partials/sidebar %>
        </div>
        <div class="flex-1 p-6 overflow-y-auto">
            <div class="container mx-auto bg-white p-6 rounded-lg shadow-md">
                <!-- Header dengan icon -->
                <div class="flex items-center justify-between mb-6">
                    <div class="flex items-center">
                        <div class="w-10 h-10 bg-gradient-to-r from-green-500 to-emerald-600 rounded-lg flex items-center justify-center mr-4">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                        </div>
                        <div>
                            <h1 class="text-3xl font-bold text-gray-800">Jadwal Rapat</h1>
                            <p class="text-gray-600 mt-1">Daftar rapat yang akan Anda ikuti</p>
                        </div>
                    </div>
                </div>

                <!-- Menampilkan Rapat yang akan datang -->
                <% if (rapat.length > 0) { %>
                    <div class="space-y-4">
                        <% rapat.forEach(item => { %>
                            <div class="border border-gray-200 rounded-md p-4 flex justify-between items-center">
                                <div>
                                    <h2 class="text-xl font-semibold text-gray-800">
                                        <%= item.judul %>
                                    </h2>
                                    <p class="text-gray-600">
                                        Tanggal: <%= new Date(item.tanggal).toLocaleDateString('id-ID', { weekday: 'long', day: 'numeric', month: 'long', year: 'numeric' }) %>
                                    </p>
                                    <p class="text-gray-500 text-sm">
                                        Tempat: <%= item.tempat %>
                                    </p>
                                </div>
                                <div class="flex space-x-2">
                                    <a href="/pengguna/details/<%= item.id_rapat %>" 
                                        class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-md transition duration-300 flex items-center">
                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                        </svg>
                                        Detail
                                    </a>
                                </div>
                            </div>
                        <% }) %>
                    </div>

                    <div class="mt-6 pt-4 border-t border-gray-200">
                        <p class="text-gray-600">
                            Total: <strong><%= rapat.length %></strong> rapat yang akan diikuti
                        </p>
                    </div>
                <% } else { %>
                    <div class="text-center py-12">
                        <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        <p class="text-gray-600 text-lg">Tidak ada rapat yang akan datang.</p>
                        <p class="text-gray-500 mt-2">Belum ada jadwal rapat yang diatur untuk Anda</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</body>

</html>
