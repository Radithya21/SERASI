<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/output.css' />
</head>

<body class="bg-gray-100 p-4 font-sans antialiased">
    <div class="container mx-auto bg-white p-6 rounded-lg shadow-md mt-8">
        <h1 class="text-3xl font-bold mb-6 text-gray-800">
            <%= title %>
        </h1>

        <div class="flex justify-start items-center mb-6">
            <a href="/pengguna"
                class="bg-gray-600 hover:bg-gray-700 text-white font-semibold py-2 px-4 rounded-md transition duration-300">
                Kembali ke Daftar Pengguna
            </a>
        </div>

        <% if (attendanceStats.length> 0) { %>
            <div class="overflow-x-auto">
                <table class="min-w-full bg-white border border-gray-200 rounded-md overflow-hidden">
                    <thead class="bg-gray-100">
                        <tr>
                            <th class="py-3 px-4 border-b text-left text-sm font-semibold text-gray-600">Nama Pengguna
                            </th>
                            <th class="py-3 px-4 border-b text-left text-sm font-semibold text-gray-600">Email</th>
                            <th class="py-3 px-4 border-b text-left text-sm font-semibold text-gray-600">Total Kehadiran
                                (Hadir)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% attendanceStats.forEach(stat=> { %>
                            <tr class="hover:bg-gray-50 transition duration-150">
                                <td class="py-3 px-4 border-b text-gray-700">
                                    <%= stat.nama %>
                                </td>
                                <td class="py-3 px-4 border-b text-gray-700">
                                    <%= stat.email %>
                                </td>
                                <td class="py-3 px-4 border-b text-gray-700 text-center">
                                    <%= stat._count.PesertaRapat %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
            <% } else { %>
                <p class="text-gray-600 text-center py-8">Belum ada data statistik kehadiran.</p>
                <% } %>
    </div>
</body>

</html>