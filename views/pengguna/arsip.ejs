<!-- views/pengguna/arsip.ejs -->

<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/output.css">
</head>

<body class="bg-gray-100">
    <div class="flex min-h-screen">
        <div class="sticky top-0 h-screen">
            <% include ../partials/sidebar %>
        </div>
        <div class="flex-1 p-6 overflow-y-auto h-screen">
            <h1 class="text-3xl font-bold text-gray-800 mb-6">Arsip Notulensi</h1>
            <% if (notulensi.length > 0) { %>
                <ul class="space-y-6">
                    <% notulensi.forEach(item => { %>
                        <li class="bg-white p-4 rounded-lg shadow-md">
                            <h2 class="text-xl font-semibold"><%= item.rapat.judul %></h2>
                            <p class="text-gray-600">Tanggal: <%= new Date(item.rapat.tanggal).toLocaleDateString('id-ID') %>
                            </p>
                            <p class="text-gray-600">Tempat: <%= item.rapat.tempat %></p>
                            <div class="mt-4 flex gap-2">
                                <a href="/pengguna/arsip/detail/<%= item.id_notulen %>" target="_blank"
                                    class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition">Lihat
                                    Detail</a>
                            </div>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <p class="text-gray-600">Tidak ada arsip notulensi.</p>
            <% } %>
        </div>
    </div>
</body>

</html>
