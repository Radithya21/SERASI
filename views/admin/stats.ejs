<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-50 min-h-screen p-6">
    <div class="max-w-4xl mx-auto">
        <!-- Header dengan tombol back -->
        <div class="flex items-center mb-6">
            <button onclick="window.location.href='/admin/list'"
                class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded mr-4 text-sm">
                ‚Üê Kembali
            </button>
            <h1 class="text-2xl font-bold text-gray-800">Statistika Kehadiran Rapat</h1>
        </div>

        <!-- Chart Container -->
        <div class="bg-white rounded-lg shadow p-6 mb-6">
            <canvas id="attendanceChart" class="w-full" height="300"></canvas>
        </div>

        <!-- Info Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="bg-white rounded-lg shadow p-4 text-center">
                <h3 class="text-sm text-gray-600 mb-1">Total Rapat</h3>
                <p class="text-xl font-bold text-blue-600" id="totalMeetings">-</p>
            </div>
            <div class="bg-white rounded-lg shadow p-4 text-center">
                <h3 class="text-sm text-gray-600 mb-1">Rata-rata Kehadiran</h3>
                <p class="text-xl font-bold text-green-600" id="avgAttendance">-</p>
            </div>
            <div class="bg-white rounded-lg shadow p-4 text-center">
                <h3 class="text-sm text-gray-600 mb-1">Kehadiran Tertinggi</h3>
                <p class="text-xl font-bold text-orange-600" id="maxAttendance">-</p>
            </div>
        </div>
    </div>

    <script>
        const ctx = document.getElementById('attendanceChart').getContext('2d');
        const data = JSON.parse('<%- JSON.stringify(data) %>');
        const labels = data.map(item => item.judul);
        const values = data.map(item => item.totalHadir);

        // Update info cards
        document.getElementById('totalMeetings').textContent = data.length;
        document.getElementById('avgAttendance').textContent =
            values.length > 0 ? Math.round(values.reduce((a, b) => a + b, 0) / values.length) : 0;
        document.getElementById('maxAttendance').textContent =
            values.length > 0 ? Math.max(...values) : 0;

        // Create chart
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Jumlah Kehadiran',
                    data: values,
                    borderColor: '#3B82F6',
                    backgroundColor: 'rgba(59, 130, 246, 0.1)',
                    borderWidth: 2,
                    fill: true,
                    tension: 0.3
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
</body>

</html>