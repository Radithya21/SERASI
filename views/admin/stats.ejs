<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 min-h-screen p-8 antialiased">
    <div class="max-w-10xl mx-auto">
        <div class="flex items-center mb-8">
            <button onclick="window.location.href='/admin/list'"
                class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-5 rounded-lg shadow-md transition duration-300 ease-in-out text-base flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd"
                        d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z"
                        clip-rule="evenodd" />
                </svg>
                Kembali
            </button>
            <h1 class="text-3xl font-extrabold text-gray-900 ml-6">Statistika Kehadiran Rapat</h1>
        </div>

        <div class="bg-white rounded-xl shadow-lg p-7 mb-8 border border-gray-200">
            <canvas id="attendanceChart" class="w-full" height="350"></canvas>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div
                class="bg-white rounded-xl shadow-md p-6 text-center border border-gray-200 transform hover:scale-105 transition duration-300 ease-in-out">
                <h3 class="text-base text-gray-600 mb-2 font-semibold">Total Rapat</h3>
                <p class="text-3xl font-extrabold text-blue-700" id="totalMeetings">-</p>
            </div>
            <div
                class="bg-white rounded-xl shadow-md p-6 text-center border border-gray-200 transform hover:scale-105 transition duration-300 ease-in-out">
                <h3 class="text-base text-gray-600 mb-2 font-semibold">Rata-rata Kehadiran</h3>
                <p class="text-3xl font-extrabold text-green-700" id="avgAttendance">-</p>
            </div>
            <div
                class="bg-white rounded-xl shadow-md p-6 text-center border border-gray-200 transform hover:scale-105 transition duration-300 ease-in-out">
                <h3 class="text-base text-gray-600 mb-2 font-semibold">Kehadiran Tertinggi</h3>
                <p class="text-3xl font-extrabold text-orange-700" id="maxAttendance">-</p>
            </div>
        </div>
    </div>

    <script>
        const ctx = document.getElementById('attendanceChart').getContext('2d');
        const data = JSON.parse('<%- JSON.stringify(data) %>');
        const labels = data.map(item => item.judul);
        const values = data.map(item => item.totalHadir);

        // Update info cards
        document.getElementById('totalMeetings').textContent = data.length;
        document.getElementById('avgAttendance').textContent =
            values.length > 0 ? Math.round(values.reduce((a, b) => a + b, 0) / values.length) : 0;
        document.getElementById('maxAttendance').textContent =
            values.length > 0 ? Math.max(...values) : 0;

        // Create chart
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Jumlah Kehadiran',
                    data: values,
                    borderColor: '#2563EB', // Biru yang lebih gelap
                    backgroundColor: 'rgba(59, 130, 246, 0.2)', // Sedikit lebih pekat
                    borderWidth: 2.5, // Sedikit lebih tebal
                    fill: true,
                    tension: 0.4, // Sedikit lebih melengkung
                    pointBackgroundColor: '#2563EB', // Warna titik data
                    pointBorderColor: '#fff',
                    pointBorderWidth: 1,
                    pointRadius: 4,
                    pointHoverRadius: 6
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top',
                        labels: {
                            font: {
                                size: 14,
                                weight: '600' // Font semi-bold untuk legenda
                            },
                            color: '#333'
                        }
                    },
                    tooltip: {
                        backgroundColor: 'rgba(0,0,0,0.8)',
                        titleFont: {
                            size: 16,
                            weight: 'bold'
                        },
                        bodyFont: {
                            size: 14
                        },
                        padding: 10,
                        cornerRadius: 6
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: '#E5E7EB' // Warna grid yang lebih terang
                        },
                        ticks: {
                            font: {
                                size: 12
                            },
                            color: '#555'
                        }
                    },
                    x: {
                        grid: {
                            display: false // Sembunyikan grid vertikal
                        },
                        ticks: {
                            font: {
                                size: 12
                            },
                            color: '#555'
                        }
                    }
                }
            }
        });
    </script>
</body>

</html>