<!DOCTYPE html>
<html lang="en">

<head>
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/output.css' />
</head>

<body class="bg-gray-100 font-sans antialiased">
    <div class="flex min-h-screen">
        <% include ../partials/sidebarAdmin %>
            <div class="flex-1 p-6">
                <div class="container mx-auto bg-white p-6 rounded-lg shadow-md">
                    <!-- Header dengan icon -->
                    <div class="flex items-center mb-6">
                        <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-indigo-600 rounded-lg flex items-center justify-center mr-4">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                        </div>
                        <div>
                            <h1 class="text-3xl font-bold text-gray-800">
                                <%= pengguna.nama %>
                            </h1>
                            <p class="text-gray-600 mt-1">Detail informasi pengguna</p>
                        </div>
                    </div>

                    <!-- Informasi Pengguna -->
                    <div class="space-y-4">
                        <div>
                            <h3 class="font-semibold text-gray-800 mb-1">Email</h3>
                            <p class="text-gray-600">
                                <%= pengguna.email %>
                            </p>
                        </div>

                        <div>
                            <h3 class="font-semibold text-gray-800 mb-1">Role</h3>
                            <p class="text-gray-600">
                                <%= pengguna.role %>
                            </p>
                        </div>

                        <div>
                            <h3 class="font-semibold text-gray-800 mb-1">NIP</h3>
                            <p class="text-gray-600">
                                <%= pengguna.nip || 'Tidak tersedia' %>
                            </p>
                        </div>

                        <div>
                            <h3 class="font-semibold text-gray-800 mb-1">Telepon</h3>
                            <p class="text-gray-600">
                                <%= pengguna.telepon || 'Tidak tersedia' %>
                            </p>
                        </div>
                    </div>

                    <!-- Button Actions -->
                    <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200 mt-6">
                        <a href="/pengguna"
                            class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold py-2 px-4 rounded-lg transition duration-300">
                            Kembali
                        </a>

                        <a href="/pengguna/edit/<%= pengguna.id_pengguna %>"
                            class="bg-yellow-500 hover:bg-yellow-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-300">
                            Edit
                        </a>

                        <form action="/pengguna/delete/<%= pengguna.id_pengguna %>" method="POST"
                            onsubmit="return confirm('Apakah Anda yakin ingin menghapus pengguna ini?');">
                            <button type="submit"
                                class="bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-300">
                                Hapus
                            </button>
                        </form>
                    </div>
                </div>
            </div>
    </div>
</body>

</html>