<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SERASI Admin Sidebar</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

        body {
            font-family: 'Inter', sans-serif;
        }

        .sidebar-gradient {
            background: linear-gradient(135deg, #f97316 0%, #ea580c 50%, #dc2626 100%);
        }

        .glass-effect {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .nav-item {
            position: relative;
            overflow: hidden;
        }

        .nav-item::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            height: 100%;
            width: 0;
            background: rgba(255, 255, 255, 0.15);
            transition: width 0.3s ease;
            z-index: 0;
        }

        .nav-item:hover::before {
            width: 100%;
        }

        .nav-item>* {
            position: relative;
            z-index: 1;
        }

        .logo-glow {
            box-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
        }

        .text-shadow {
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        }

        .hover-scale {
            transition: transform 0.2s ease;
        }

        .hover-scale:hover {
            transform: scale(1.05);
        }

        .nav-separator {
            height: 1px;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            margin: 0.5rem 0;
        }
    </style>
</head>

<body class="bg-gray-100">
    <div class="sidebar-gradient h-screen w-64 flex flex-col items-start p-6 text-white shadow-2xl relative">
        <!-- Background Pattern -->
        <div class="absolute inset-0 opacity-10">
            <div class="absolute top-10 left-10 w-32 h-32 rounded-full bg-white"></div>
            <div class="absolute bottom-20 right-8 w-24 h-24 rounded-full bg-white"></div>
            <div class="absolute top-1/2 right-4 w-16 h-16 rounded-full bg-white"></div>
        </div>

        <!-- Logo Section -->
        <div class="flex items-center mb-8 glass-effect p-4 rounded-xl w-full relative z-10">
            <img src="/images/logoSerasi.png" alt="SERASI Logo" class="w-14 h-14 mr-3 logo-glow rounded-lg hover-scale">
            <div>
                <h1 class="text-xl font-bold tracking-wider text-shadow">SERASI</h1>
                <p class="text-sm font-medium opacity-90 tracking-wide">ADMIN PANEL</p>
            </div>
        </div>

        <!-- Navigation -->
        <nav class="flex flex-col space-y-1 w-full relative z-10">
            <a href="/pengguna/dashboard"
                class="nav-item flex items-center space-x-4 p-4 rounded-xl transition-all duration-300 w-full group">
                <img src="/images/Vector.png" alt="Dashboard Icon"
                    class="w-6 h-6 group-hover:scale-110 transition-transform duration-200">
                <span class="text-sm font-medium tracking-wide">Dashboard</span>
            </a>

            <div class="nav-separator"></div>

            <a href="/rapat/jadwal"
                class="nav-item flex items-center space-x-4 p-4 rounded-xl transition-all duration-300 w-full group">
                <img src="/images/jadwal.png" alt="Jadwal Icon"
                    class="w-6 h-6 group-hover:scale-110 transition-transform duration-200">
                <span class="text-sm font-medium tracking-wide">Jadwal</span>
            </a>

            <a href="/rapat/riwayat"
                class="nav-item flex items-center space-x-4 p-4 rounded-xl transition-all duration-300 w-full group">
                <img src="/images/riwayat.png" alt="Riwayat Icon"
                    class="w-6 h-6 group-hover:scale-110 transition-transform duration-200">
                <span class="text-sm font-medium tracking-wide">Riwayat</span>
            </a>

            <a href="/arsip"
                class="nav-item flex items-center space-x-4 p-4 rounded-xl transition-all duration-300 w-full group">
                <img src="/images/arsip.png" alt="Arsip Icon"
                    class="w-6 h-6 group-hover:scale-110 transition-transform duration-200">
                <span class="text-sm font-medium tracking-wide">Arsip</span>
            </a>

            <div class="nav-separator mt-4"></div>

            <a href="/logout"
                class="nav-item flex items-center space-x-4 p-4 rounded-xl transition-all duration-300 w-full group mt-2 border-t border-white/20">
                <img src="/images/logout.png" alt="Logout Icon"
                    class="w-6 h-6 group-hover:scale-110 transition-transform duration-200">
                <span class="text-sm font-medium tracking-wide">Logout</span>
            </a>
        </nav>
    </div>
</body>

</html>