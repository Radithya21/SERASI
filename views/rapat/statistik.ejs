<!-- views/rapat/statistik.ejs -->
<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Statistik Rapat per Minggu</title>
    <link rel="stylesheet" href="/stylesheets/output.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-gray-100 font-sans antialiased">
    <div class="flex min-h-screen">
        <% include ../partials/sidebarAdmin %>
        <div class="flex-1 p-6">
            <div class="container mx-auto bg-white p-6 rounded-lg shadow-md">
                <h1 class="text-3xl font-bold mb-6 text-gray-800">Statistik Rapat per Minggu</h1>
                <div class="mb-6">
                    <a href="/rapat/riwayat" class="text-blue-600 hover:underline">&larr; Kembali ke Riwayat Rapat</a>
                </div>
                <div class="bg-white rounded-lg shadow-lg p-6 w-full max-w-2xl mx-auto">
                    <canvas id="chartStatistik" width="600" height="350"></canvas>
                </div>
            </div>
        </div>
    </div>
    <script>
var mingguLabels = <%= JSON.stringify(statistikMingguan.labels) %>;
var mingguData = <%= JSON.stringify(statistikMingguan.data) %>;
var ctx = document.getElementById('chartStatistik').getContext('2d');
new Chart(ctx, {
    type: 'bar',
    data: {
        labels: mingguLabels,
        datasets: [{
            label: 'Jumlah Rapat',
            data: mingguData,
            backgroundColor: 'rgba(16, 185, 129, 0.7)',
            borderColor: 'rgba(16, 185, 129, 1)',
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            y: { beginAtZero: true, precision: 0 }
        }
    }
});
</script>
</body>
</html>
