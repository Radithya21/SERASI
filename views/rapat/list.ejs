<!DOCTYPE html>
<html lang="en">

<head>
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/output.css' />
</head>

<body class="bg-gray-100 font-sans antialiased">
    <div class="flex">
        <% include ../partials/sidebarAdmin %> <!-- Menambahkan sidebar -->
            <div class="flex-1 p-4">
                <div class="container mx-auto bg-white p-6 rounded-lg shadow-md mt-8">
                    <h1 class="text-3xl font-bold mb-6 text-gray-800">Daftar Rapat</h1>

                    <div class="flex justify-end mb-6">
                        <a href="/rapat/new"
                            class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-md transition duration-300">
                            Buat Rapat
                        </a>
                    </div>

                    <% if (rapat.length> 0) { %>
                        <div class="space-y-4">
                            <% rapat.forEach(r=> { %>
                                <div class="border border-gray-200 rounded-md p-4 flex justify-between items-center">
                                    <div>
                                        <h2 class="text-xl font-semibold text-gray-800">
                                            <%= r.judul %>
                                        </h2>
                                        <p class="text-gray-600">Rabu, <%= r.tanggal.toLocaleDateString('id-ID', {
                                                day: 'numeric' , month: 'long' , year: 'numeric' }) %>
                                        </p>
                                    </div>
                                    <div class="flex space-x-4">
                                        <a href="/rapat/detail/<%= r.id_rapat %>"
                                            class="bg-orange-300 hover:bg-orange-400 text-white font-semibold py-2 px-4 rounded-md transition duration-300">
                                            Lihat Detail
                                        </a>
                                        <a href="/rapat/absensi/<%= r.id_rapat %>"
                                            class="bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded-md transition duration-300">
                                            Absensi
                                        </a>
                                    </div>
                                </div>
                                <% }) %>
                        </div>
                        <% } else { %>
                            <p class="text-gray-600 text-center py-8">Belum ada rapat terdaftar.</p>
                            <% } %>
                </div>
            </div>
    </div>
</body>

</html>