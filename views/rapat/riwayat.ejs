<!-- views/rapat/riwayat.ejs -->
<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/stylesheets/output.css">
</head>

<body class="bg-gray-100 font-sans antialiased">
    <div class="flex min-h-screen">
        <% include ../partials/sidebarAdmin %> <!-- Sidebar di kiri -->

            <div class="flex-1 p-6">
                <div class="container mx-auto bg-white p-6 rounded-lg shadow-md">
                    <h1 class="text-3xl font-bold mb-6 text-gray-800">Riwayat Rapat</h1>

                    <div class="mb-4">
                        <!-- Tombol untuk ekspor ke PDF -->
                        <a href="/rapat/riwayat/pdf"
                            class="bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 mb-4 inline-block">Eksport
                            ke PDF</a>

                        <% if (rapat.length> 0) { %>
                            <ul>
                                <% rapat.forEach(item=> { %>
                                    <li class="mb-4">
                                        <h3 class="font-semibold text-gray-800">
                                            <%= item.judul %>
                                        </h3>
                                        <p class="text-gray-600">Tanggal: <%= new
                                                Date(item.tanggal).toLocaleDateString('id-ID') %>
                                        </p>
                                        <p class="text-gray-600">Tempat: <%= item.tempat %>
                                        </p>
                                        <a href="/rapat/detail/<%= item.id_rapat %>" class="text-blue-600">Lihat
                                            Detail</a>
                                    </li>
                                    <% }) %>
                            </ul>
                            <% } else { %>
                                <p class="text-gray-600">Tidak ada rapat yang telah dilakukan.</p>
                                <% } %>
                    </div>
                </div>
            </div>
    </div>
</body>

</html>